@model SignInViewModel

@{
    ViewData["Title"] = "SignIn";
}


@section Scripts{

    @await Html.PartialAsync("_ValidationScriptsPartial")

}


<div class="row">
    <div class="col-md-6 offset-3">
        <h1>SignIn</h1>

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
        </div>
        <form method="post">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="Ornek@gmail.com">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" class="form-control" asp-for="Password" placeholder="Şifre">
                <span class="text-danger" asp-validation-for="Password"></span>

            </div>
            <br />
            <div class="row">
                <div class="col-md-8">
                    <label class="form-check-label" asp-for="RememberMe"></label>
                    <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                </div>
                <div class="col-md-4">
                    <a class="btn btn-outline-secondary btn-sm float-end" asp-controller="Home" asp-action="ForgetPassword">Şifremi Unuttum</a>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Üye Giriş</button>
        </form>
    </div>
</div>
